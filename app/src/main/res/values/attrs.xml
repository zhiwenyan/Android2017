<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference"/>
        <attr name="metaButtonBarButtonStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="BannerView">
        <attr name="dotIndicatorFocus" format="color|reference"/>
        <attr name="dotIndicatorNormal" format="color|reference"/>
        <attr name="dotSize" format="dimension"/>
        <attr name="dotDistance" format="dimension"/>
        <attr name="dotGravity" format="enum">

            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
            <enum name="left" value="-1"/>
        </attr>
        <attr name="bottomColor" format="color|reference"/>
        <!--定义宽高比-->
        <attr name="widthProportion" format="float"/>
        <attr name="heightProportion" format="float"/>
    </declare-styleable>

    <declare-styleable name="MultiShapeView">
        <attr name="shape" format="enum">
            <enum name="rect" value="1"/>
            <enum name="circle" value="2"/>
        </attr>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="cover_color" format="color"/>
        <attr name="round_radius" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="speed" format="integer"/>
    </declare-styleable>
    <declare-styleable name="SuperCircleView">

        <!-- 圆的半价 -->
        <attr name="min_circle_radio" format="integer"/>

        <!-- 圆环的宽度 -->
        <attr name="ring_width" format="float"/>

        <!-- 分成几段 -->
        <attr name="select" format="integer"/>

        <!-- 每段间隔的角度 -->
        <attr name="selec_angle" format="integer"/>

        <!-- 圆的颜色 -->
        <attr name="circle_color" format="color"/>

        <!-- 圆的颜色 -->
        <attr name="max_circle_color" format="color"/>

        <!-- 圆环的默认颜色 -->
        <attr name="ring_normal_color" format="color"/>

        <!-- 圆环要显示的彩色的区域-->
        <attr name="ring_color_select" format="integer"/>

        <!-- 是否显示断 -->
        <attr name="is_show_select" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="LetterSideBarView">
    </declare-styleable>

    <declare-styleable name="slideMenu">
        <attr name="rightPadding" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color"/>
        <attr name="changeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TrackIndicatorView">
        <attr name="tabVisibleNums" format="integer"/>
    </declare-styleable>

    <declare-styleable name="GraphView">
        <attr name="graphTitle" format="string"/>
        <attr name="xAxisName" format="string"/>
        <attr name="yAxisName" format="string"/>
        <attr name="axisTextSize" format="dimension|integer"/>
        <attr name="axisTextColor" format="integer|color"/>
    </declare-styleable>
    <declare-styleable name="RatingBar">
        <attr name="starNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="starNum" format="integer"/>
    </declare-styleable>
    <declare-styleable name="KugouMenu">
        <attr name="menuMarginRight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="selected" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="StepViewGroup">
        <attr name="count" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="WaveBall">
        <attr name="centerText" format="string"/>
        <attr name="centerTextSize" format="dimension"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="ballColor" format="color"/>
        <attr name="ballRadius" format="dimension"/>
        <attr name="waveColor" format="color"/>
    </declare-styleable>


</resources>
