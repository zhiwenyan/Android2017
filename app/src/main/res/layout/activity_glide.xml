<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhiwenyan.cmccaifu.com.android2017.glide.GlideActivity">


    <Button
        android:id="@+id/loadLocalImgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载本地资源图片"/>

    <Button
        android:id="@+id/loadNetImgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载网络图片"/>

    <Button
        android:id="@+id/transform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="变换图片(圆形)"/>

    <Button
        android:id="@+id/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="变换图片(圆角)"/>


    <ImageView
        android:id="@+id/loadImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/loadImg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

</LinearLayout>
