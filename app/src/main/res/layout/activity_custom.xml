<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhiwenyan.cmccaifu.com.android2017.view.customview.CustomActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <zhiwenyan.cmccaifu.com.android2017.view.customview.HuaWeiView
            android:id="@+id/hw"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>


        <zhiwenyan.cmccaifu.com.android2017.view.customview.QQRunView
            android:id="@+id/stepView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:borderWidth="20dp"
            app:innerColor="@color/colorAccent"
            app:outerColor="@color/colorPrimary"
            app:stepTextColor="@color/colorAccent"
            app:stepTextSize="18sp"/>

        <zhiwenyan.cmccaifu.com.android2017.view.customview.RunView
            android:id="@+id/runView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>


        <zhiwenyan.cmccaifu.com.android2017.view.customview.RotationLineView
            android:id="@+id/LineView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <zhiwenyan.cmccaifu.com.android2017.view.customview.WaveView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</ScrollView>
