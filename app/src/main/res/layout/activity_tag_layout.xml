<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhiwenyan.cmccaifu.com.android2017.ViewGroup.tagLayout.TagLayoutActivity">


    <zhiwenyan.cmccaifu.com.android2017.ViewGroup.TagLayout1.TagLayout
        android:id="@+id/tag"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </zhiwenyan.cmccaifu.com.android2017.ViewGroup.TagLayout1.TagLayout>


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加Tag"/>

    <Button
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="移除Tag"/>
</LinearLayout>
