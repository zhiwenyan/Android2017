            android:textAllCaps="false"/>

        <Button
            android:id="@+id/kugou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="酷狗视差动画"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/yahoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雅虎摘要动画"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图表"/>

        <Button
            android:id="@+id/btn26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScanLoadingView"/>

        <Button
            android:id="@+id/btn27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WaveView"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义评分控件"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="酷狗Menu"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WaveView"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="redPacket"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手势"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btn41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="侧滑删除ItemView"
            android:textAllCaps="true"/>

        <zhiwenyan.cmccaifu.com.android2017.view.button.MyButton
            android:id="@+id/btn42"
            android:textAllCaps="true"
            android:text="自定义的Button"
            android:layout_width="match_parent"
            android:layout_height="42dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <zhiwenyan.cmccaifu.com.android2017.view.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"/>

    </LinearLayout>

</ScrollView>
