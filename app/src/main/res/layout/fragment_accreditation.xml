                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="前往提交"
                        android:textColor="@color/common_gray"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

